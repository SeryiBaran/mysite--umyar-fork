doctype html
html(lang="ru")
	head
		block meta
			meta(charset="UTF-8")
			meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
			meta(name="theme-color" content="#1a1a1a")
		block title 
		block link
			link(
				rel="shortcut icon"
				href="./img/pictogram.ico"
				type="image/x-icon"
			)
	body
		.main-layout
			include header.pug
			block content
			include footer.pug
		block scripts
			script(src="./js/menu.js")

		